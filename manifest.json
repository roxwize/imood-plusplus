{
  "manifest_version": 3,
  "name": "imood better forum",
  "description": "an extension to make the forum on imood look nicer",
  "version": "1.0.0",

  "content_scripts": [
    {
      "matches": ["*://www.imood.com/forums/*/threads/*"],
      "js": ["forum.js"],
      "css": ["im-style.css"]
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
    "256": "icon256.png"
  }
}
